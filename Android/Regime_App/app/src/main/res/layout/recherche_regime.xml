<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/barreDeRecherche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/rechercheNomRegime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="RÃ©gime"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@drawable/recherche_back"/>
        <Button
            android:textAppearance="@style/BoutonTri"
            android:id="@+id/triDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"/>
        <Button
            android:textAppearance="@style/BoutonTri"
            android:id="@+id/triNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recherche_liste_regimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>