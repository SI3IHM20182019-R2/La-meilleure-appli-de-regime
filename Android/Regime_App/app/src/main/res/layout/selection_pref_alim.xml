<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bienvenue_green1">

    <CheckBox
        android:id="@+id/checkbox_ovo_lacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="8dp"
        android:onClick="onCheckboxClicked"
        android:text="ovo-lacto-végétarien"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_ovo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="onCheckboxClicked"
        android:text="ovo-végétarien"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/checkbox_ovo_lacto"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_ovo_lacto" />

    <CheckBox
        android:id="@+id/checkbox_lacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="onCheckboxClicked"
        android:text="lacto-végétarien"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/checkbox_ovo"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_ovo" />

    <CheckBox
        android:id="@+id/checkbox_pesco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="onCheckboxClicked"
        android:text="pesco-végétarien"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/checkbox_lacto"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_lacto" />

    <CheckBox
        android:id="@+id/checkbox_vegetalien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onCheckboxClicked"
        android:text="végétalien"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/checkbox_pesco"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_pesco" />

    <Button
        android:id="@+id/soumettre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="128dp"
        android:background="@null"
        android:text="@string/soumettre"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/annuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="128dp"
        android:background="@null"
        android:text="@string/annuler"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>