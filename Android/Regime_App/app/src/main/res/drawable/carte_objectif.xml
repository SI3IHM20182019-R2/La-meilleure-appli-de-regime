<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#FF0000"
                android:startColor="#FF0000" />
            <corners
                android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#303030" />

        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#303030" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
</selector>